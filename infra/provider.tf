terraform {
  required_version = ">= 1.5.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = var.aws_region
  # Uses your normal AWS CLI credentials (profile/env vars). 
  # No access_key / secret_key hard-coded here.
}